<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Define your custom color -->
    <color name="splash_background_color">#BC294B</color>
    
    <!-- Theme applied to the Android Window while the process is starting -->
    <style name="Theme.SplashScreen.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background_color</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_anim</item>
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>